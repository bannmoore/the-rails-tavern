<h1>Characters</h1>

<%= link_to 'New character', new_character_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th colspan="2"></th>
  </tr>

  <% @characters.each do |character| %>
  <tr>
    <td><%= character.name %></td>
    <td><%= character.character_class %></td>
    <td><%= link_to 'Show', character_path(character) %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character_path(character), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>